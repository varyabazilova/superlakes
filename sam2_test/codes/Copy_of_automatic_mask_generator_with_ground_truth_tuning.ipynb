   "source": [
    "## Configuration - UPDATE THESE PATHS"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# =============================================================================\n",
    "# UPDATE THESE PATHS TO YOUR FILES\n",
    "# =============================================================================\n",
    "\n",
    "# Choose your input image type (uncomment one):\n",
    "IMAGE_TYPE = \"FCC\"  # False Color Composite\n",
    "# IMAGE_TYPE = \"NDWI\"  # NDWI single band\n",
    "# IMAGE_TYPE = \"RGB\"   # True color RGB\n",
    "\n",
    "# Image paths\n",
    "FCC_IMAGE_PATH = \"images/2021-09-04_fcc_testclip.tif\"  # Your FCC image\n",
    "NDWI_IMAGE_PATH = \"images/2021-09-04_fndwi_clip_sam.tif\"  # Your NDWI image  \n",
    "RGB_IMAGE_PATH = \"images/2021-09-04_rgb_testclip.tif\"  # Your RGB image\n",
    "\n",
    "# Ground truth lake mask (binary: 1=lake, 0=not lake)\n",
    "GROUND_TRUTH_PATH = \"images/2021-09-04_lake_mask.tif\"  # UPDATE THIS PATH\n",
    "\n",
    "# SAM 2 model paths\n",
    "SAM2_CHECKPOINT = \"../checkpoints/sam2.1_hiera_large.pt\"\n",
    "MODEL_CFG = \"configs/sam2.1/sam2.1_hiera_l.yaml\"\n",
    "\n",
    "print(f\"Image type: {IMAGE_TYPE}\")\n",
    "print(f\"Ground truth: {GROUND_TRUTH_PATH}\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## Load Image Data"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Load image based on selected type\n",
    "print(f\"Loading {IMAGE_TYPE} image...\")\n",
    "\n",
    "if IMAGE_TYPE == \"FCC\":\n",
    "    # False Color Composite (your current approach)\n",
    "    image = Image.open(FCC_IMAGE_PATH)\n",
    "    image = np.array(image.convert(\"RGB\"))\n",
    "    \n",
    "elif IMAGE_TYPE == \"NDWI\":\n",
    "    # NDWI converted to 3-channel\n",
    "    with rasterio.open(NDWI_IMAGE_PATH) as src:\n",
    "        ndwi = src.read(1)\n",
    "    \n",
    "    # Normalize to 0-255\n",
    "    ndwi_normalized = ((ndwi + 1) / 2 * 255).astype(np.uint8)\n",
    "    \n",
    "    # Create 3-channel numpy array directly\n",
    "    image = np.stack([ndwi_normalized, ndwi_normalized, ndwi_normalized], axis=-1)\n",
    "    \n",
    "elif IMAGE_TYPE == \"RGB\":\n",
    "    # True color RGB\n",
    "    image = Image.open(RGB_IMAGE_PATH)\n",
    "    image = np.array(image.convert(\"RGB\"))\n",
    "\n",
    "print(f\"Image shape: {image.shape}\")\n",
    "print(f\"Image value range: {image.min()} - {image.max()}\")\n",
    "\n",
    "# Visualize input image\n",
    "plt.figure(figsize=(12, 12))\n",
    "plt.imshow(image)\n",
    "plt.title(f'{IMAGE_TYPE} Satellite Image')\n",
    "plt.axis('off')\n",
    "plt.show()"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## Load Ground Truth Lake Mask"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Load ground truth lake mask\n",
    "print(\"Loading ground truth lake mask...\")\n",
    "try:\n",
    "    with rasterio.open(GROUND_TRUTH_PATH) as src:\n",
    "        ground_truth = src.read(1).astype(bool)  # Convert to boolean\n",
    "    \n",
    "    print(f\"Ground truth shape: {ground_truth.shape}\")\n",
    "    print(f\"Lake pixels: {ground_truth.sum():,} ({ground_truth.mean()*100:.2f}% of image)\")\n",
    "    \n",
    "    # Check if dimensions match\n",
    "    if ground_truth.shape != image.shape[:2]:\n",
    "        print(f\"‚ö†Ô∏è  WARNING: Dimension mismatch!\")\n",
    "        print(f\"Image: {image.shape[:2]}, Ground truth: {ground_truth.shape}\")\n",
    "        print(\"Consider resizing or checking coordinate systems.\")\n",
    "    else:\n",
    "        print(\"‚úÖ Dimensions match!\")\n",
    "    \n",
    "    # Visualize ground truth\n",
    "    fig, axes = plt.subplots(1, 2, figsize=(20, 10))\n",
    "    \n",
    "    axes[0].imshow(image)\n",
    "    axes[0].set_title(f'{IMAGE_TYPE} Image')\n",
    "    axes[0].axis('off')\n",
    "    \n",
    "    axes[1].imshow(image)\n",
    "    axes[1].imshow(ground_truth, alpha=0.6, cmap='Blues')\n",
    "    axes[1].set_title('Ground Truth Lakes (Blue = Lake)')\n",
    "    axes[1].axis('off')\n",
    "    \n",
    "    plt.tight_layout()\n",
    "    plt.show()\n",
    "    \n",
    "    GROUND_TRUTH_AVAILABLE = True\n",
    "    \n",
    "except FileNotFoundError:\n",
    "    print(f\"‚ùå Ground truth file not found: {GROUND_TRUTH_PATH}\")\n",
    "    print(\"Will proceed without parameter tuning.\")\n",
    "    GROUND_TRUTH_AVAILABLE = False\n",
    "    ground_truth = None"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## Initialize SAM 2 Model"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Initialize SAM 2 model\n",
    "print(\"Loading SAM 2 model...\")\n",
    "sam2 = build_sam2(MODEL_CFG, SAM2_CHECKPOINT, device=device, apply_postprocessing=False)\n",
    "print(\"‚úÖ SAM 2 model loaded successfully!\")"
   ]
